<%= render 'books/side'%>
	<div class="col-xs-9">
<h2>Books</h2>
<!-- 検索フォームここから -->
<p>検索</p>
<%= form_with method: :get, local: true do |f| %>
	<%= f.text_field :title %>
	<%= f.submit :search %>
<% end %>

<% @search_books.each do |f| %>
	<p>title</p>
	<p><%= f.title %></p>
 <% end %>

<!-- 検索フォームここまで -->
<table class="table table-hover">
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Option</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<!-- books変数内から一つずつ取り出しbook変数へ -->
	<% @books.each do |book| %>
	<!-- bookとひもついているユーザーの画像データを表示させる -->
	<tbody>
		<tr>
			<td>
				<%= link_to user_path(book.user) do %>
					<%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg",size:'40x40'%>
				<% end %>
			</td>
			<!-- タイトルにリンク付けする -->
			<td>
				<%= link_to(book_path(book.id)) do %>
					<%= book.title %>
				<% end %>
			</td>
			<!-- bodyを表示 -->
			<td><%= book.body %></td>
		</tr>
	<% end %>
	</tbody>
</table>
<!-- book投稿一覧ここまで -->
</div>
</div>
</div>

