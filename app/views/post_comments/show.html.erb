<%= render 'books/side'%>
	<div class="col-xs-9">
		<h2>comments</h2>
	<table class="table table-hover">
		<thead>
			<tr>
				<th>投稿者名</th>
				<th>時間</th>
				<th>内容</th>
			</tr>
		</thead>
		<tbody>
			<% @book.post_comments.each do |post_comment| %>
			<tr>
				<td><%= post_comment.user.name %></td>
				<td><%= post_comment.created_at.strftime('%Y/%m/%d') %></td>
				<td><%= post_comment.comment %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>